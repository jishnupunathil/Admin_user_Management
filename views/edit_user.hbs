<section class="m-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-center">Edit User</h1>
                <form action="/admin/edit?id={{user._id}}" method="post" id="signup">
                    <label for="name">Name</label><br>
                    <input type="text" value="{{user.name}}" name="name" class="form-control" required pattern="\S(.*\S)?"><br>
                    <label for="email">Email</label><br>
                    <input type="text" name="email" value="{{user.email}}" class="form-control" required pattern="\S(.*\S)?"><br>
                    <button type="submit" class="btn btn-success  mt-3">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>