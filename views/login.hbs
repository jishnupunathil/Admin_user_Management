<div class="wrapper fadeInDown" style="background: rgb(142, 194, 243);">
  <div id="formContent" class=" p-5 mb-5">
    <h1 class="pt-5">Login Form</h1>
   
    <!-- Login Form -->
    <form action="/login" method="POST" id="submit-form2" class="pt-5">
    {{#if loginErr}}
     <p style="color: red;">Invalid username or password</p>
    {{/if}}
      <input type="email" id="email" class="fadeIn second" name="email" placeholder="Email..." required pattern="\S(.*\S)?">
      <input type="password" id="password" class="fadeIn third mt-2" name="password" placeholder="password" minlength="3" required pattern="\S(.*\S)?">
      <input type="submit" class="fadeIn fourth mt-5" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <p class="text-center text-muted mt-5 mb-0"><a href="/signup"
        class="fw-bold text-body"><u>Create an Account?</u></a></p>


  </div>
</div>